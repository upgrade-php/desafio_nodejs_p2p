  "version": "0.2.0",
  "configurations": [
    {
      "name": "Docker: Attach to Node",
      "type": "node",
      "request": "attach",
      "address": "0.0.0.0",
      "port": 9229,
      "trace": true,
      "restart": true,
      "timeout": 10000,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/usr/src/app",
      "internalConsoleOptions": "neverOpen",
      "continueOnAttach": true
    }
  ]
}
